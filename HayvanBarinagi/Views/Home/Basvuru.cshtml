@{
    ViewData["Title"] = "Başvuru Sayfası";
}

<h2 class="text-center">Hayvan Barınağı Başvuru Formu</h2>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Adınız Soyadınız</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresiniz</label>
                <input type="email" class="form-control" id="email" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telefon Numaranız</label>
                <input type="tel" class="form-control" id="phone" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Adresiniz</label>
                <textarea class="form-control" id="address" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="animal_type" class="form-label">Sahiplenmek İstediğiniz Hayvanın Türü</label>
                <input type="text" class="form-control" id="animal_type" required>
            </div>
            <div class="mb-3">
                <label for="family_members" class="form-label">Evde Yaşayan Aile Üye Sayısı</label>
                <input type="number" class="form-control" id="family_members" required>
            </div>
            <div class="mb-3">
                <label for="home_type" class="form-label">Ev Tipiniz (Apartman, Villa, vb.)</label>
                <input type="text" class="form-control" id="home_type" required>
            </div>
            <div class="mb-3">
                <label for="pet_experience" class="form-label">Daha Önce Hayvan Sahiplenme Deneyiminiz Var mı?</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="pet_experience" id="experience_yes" value="yes" required>
                    <label class="form-check-label" for="experience_yes">Evet</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="pet_experience" id="experience_no" value="no" required>
                    <label class="form-check-label" for="experience_no">Hayır</label>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Başvuruyu Gönder</button>
            </div>
        </form>
    </div>
</div>
