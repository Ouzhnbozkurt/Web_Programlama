@{
    ViewData["Title"] = "İletişim Sayfası";
}


<h2 class="text-center">İletişim</h2>
<p class="text-center">Bize ulaşmak için aşağıdaki iletişim formunu kullanabilirsiniz.</p>

@using (Html.BeginForm("Iletisim", "Home", FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Adınız Soyadınız</label>
                    <input type="text" class="form-control" id="name" name="adSoyad" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">E-posta Adresiniz</label>
                    <input type="email" class="form-control" id="email" name="ePosta" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Konu</label>
                    <input type="text" class="form-control" id="subject" name="konu" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Mesajınız</label>
                    <textarea class="form-control" id="message" rows="5" name="mesaj" required></textarea>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-md">Gönder</button>
                </div>
            </form>
        </div>
    </div>
 }

